<% add_decidim_meta_tags(title: t("participatory_processes.index.title", scope: "decidim")) %>

<%
edit_link(
  decidim_admin_participatory_processes.participatory_processes_path,
  :read,
  :process_list
)
%>

<% content_for :css_content do %>
  <%= stylesheet_pack_tag "decidim_participatory_processes", media: "all" %>
<% end %>

<% content_for :js_content do %>
  <%= javascript_pack_tag "decidim_participatory_processes" %>
<% end %>

<% content_for :aside do %>
  <h1 class="h1 decorator"><%= t("decidim.menu.processes") %></h1>
<% end %>

<%= render layout:"layouts/decidim/shared/layout_two_col" do %>

  <%= redesigned_participatory_space_floating_help %>

  <% if promoted_collection.any? %>
    <section id="highlighted-processes">
      <h2 class="section-heading"><%= t("participatory_processes.index.promoted_processes", scope: "layouts.decidim") %></h1>
      <% promoted_collection.each do |promoted_item| %>
        <%= render_highlighted_partial_for promoted_item %>
      <% end %>
    </section>
  <% end %>

  <section id="processes-grid">
    <div class="processes-grid-order-by">
      <%= render partial: "order_by_processes" %>
    </div>
    <%= render partial: "decidim/shared/participatory_space_filters/show" %>
    <p class="loading"><%= t("loading", scope: "decidim.participatory_processes.participatory_processes.index") %></p>
    <div class="row small-up-1 medium-up-2 large-up-3 card-grid">
      <%= render(collection) %>
    </div>
  </section>
<% end %>
