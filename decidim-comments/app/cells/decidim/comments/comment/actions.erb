<div class="comment__actions">
  <% if can_reply? %>
    <button class="button button__sm button__text-secondary" data-controls="panel-<%= reply_id %>">
      <%= icon "chat-1-line" %>
      <span><%= t("decidim.components.comment.reply") %></span>
      <%# REDESIGN_PENDING: only show the block when a user click on "respondre/responder" %>
        <%= icon "close-circle-line" %>
        <span><%= t("decidim.components.comment.cancel_reply") %></span>
    </button>
  <% end %>
</div>
