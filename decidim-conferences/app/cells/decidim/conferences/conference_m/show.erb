<%= link_to resource_path, class: "conference__list__item" do %>
  <% if resource_image_path.present? %>
    <div class="conference__list__item-img">
      <%= image_tag resource_image_path, alt: title, class: "w-full h-full object-cover" %>
    </div>
  <% end %>

  <div class="conference__list__item-text">
    <h3 class="h4">
      <%= title %>
    </h3>
  </div>
<% end %>
