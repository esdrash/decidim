<% if geolocalizable.address.present? %>
<div class="static-map__container">
  <div>
    <%= cell("decidim/address", geolocalizable) %>
  </div>
  <% if Decidim::Map.available?(:static) || Decidim::Map.available?(:dynamic) %>
  <div class="static-map">
    <%= static_map_link(geolocalizable) %>
  </div>
  <% end %>
</div>
<% end %>
